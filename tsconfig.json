{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2017",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "bin",
        "lib": ["es2017"],
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
    ]
}